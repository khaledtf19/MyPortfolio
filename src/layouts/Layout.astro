---
import { ViewTransitions } from "astro:transitions";
import Nav from "../components/Nav.astro";
import Footer from "../components/footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body
    class="font-sans from-gray-900 via-[#300171] to-slate-900 bg-gradient-to-b"
  >
    <div
      class="relative before:pointer-events-none before:absolute before:inset-0 before:block before:h-full before:w-screen before:bg-auto before:bg-repeat before:opacity-5 before:bg-[url('/pattern3.svg')]"
    >
      <Nav />
      <main>
        <div class="h-16"></div>
        <slot />
      </main>
      <Footer />
    </div>
    <style is:global>
      @font-face {
        font-family: "DistantGalaxy";
        src: url("/fonts/DistantGalaxy.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      html {
        scroll-behavior: smooth;
        scroll-padding-top: 5rem;
      }
      body {
        box-sizing: border-box;
      }
      a {
      }
    </style>
  </body>
</html>
